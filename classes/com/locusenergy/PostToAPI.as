package com.locusenergy {		public class PostToAPI {	var myData:URLRequest			public function PostToAPI() {			// constructor code			myData = new URLRequest("some.php")			myData.method = URLRequestMethod.POST					}		public function post(url, id, status)		{			var variables:URLVariables = new URLVariables()			variables.url = url;			variables.id = id;			variables.status = status;			myData.data = variables			var loader:URLLoader = new URLLoader()			loader.dataFormat = URLLoaderDataFormat.VARIABLES			loader.addEventListener(Event.COMPLETE, dataOnLoad)			loader.load(myData)			function dataOnLoad(evt:Event){			 trace(loader.data.status) //status is a custom flag passed from back-end 		}	}	}