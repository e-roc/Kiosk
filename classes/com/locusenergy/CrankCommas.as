package com.locusenergy{		public class CrankCommas{				public function CrankCommas()		{		}		public static function crankComma(numStr):String		{			var sign = "";			if (numStr.charAt(0) == '-') 			{				sign = '-';				numStr = numStr.substring(1, numStr.length);			}			var regEx:RegExp = /([0-9]+)\.([0-9]+)/			var commaStr = numStr.replace(regEx, "$1");						if (commaStr.length > 3)			{				var modThree = commaStr.length % 3;				var commaExpStr:String = "(\\d{"+modThree+"})(\\d+)"				var commaExp1:RegExp = new RegExp(commaExpStr, "g");				var commaExp2:RegExp = /\d{3}/g								var str1 = "";				if(modThree != 0)					str1 = commaStr.replace(commaExp1, "$1,")					var str2 = commaStr.replace(commaExp1, "$2");					str2 = str2.replace(commaExp2, "$&,");								var outputStr = sign + str1 + str2;								return outputStr.substr(0, outputStr.length - 1);			}			else			{				return sign + numStr;			}					}	}}