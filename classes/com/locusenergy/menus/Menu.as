package com.locusenergy.menus {		import flash.display.*;		public class Menu extends MovieClip{				// Constants:		// Public Properties:		// Private Properties:		var selectedIndex:int;		var style:String;		public var menuItemArray:Array;		// Initialization:		public function Menu(type:String, index:int) { 			var constMain:String = Constants.MAIN;			selectedIndex = index;			this.style = type;			menuItemArray = new Array();		}		public function addMenuItem(label, alt, call)		{			var menuItem:Menuitem = new Menuitem(label, alt, style, call);			menuItemArray.push(menuItem);			constructMenu(menuItemArray, "");		}		public function constructMenu(items:Array, xyz:String)		{			var menuItem:Menuitem;			var spacer = 0.5;			var i=0.0;								if (this.style == Constants.SIDE)			{				var yPos = 0;				spacer = 4.0;				for (i=0; i<items.length; i++)				{					if (i == selectedIndex)					{						items[i].makeSelected(style);					}					menuItem = items[i];					menuItem.y = yPos;					yPos = yPos + menuItem.height + spacer;										addChild(menuItem);				}			}			else			{				if (this.style == Constants.SUB)				{					spacer = 2;				}				var xPos = 0;				for (i=0; i<items.length; i++)				{					if (i == selectedIndex)					{						items[i].makeSelected(this.style);					}					menuItem = items[i];					menuItem.x = xPos;					xPos = xPos + menuItem.width + spacer;										addChild(menuItem);				}			}		}				public function cleanUp()		{		}			// Public Methods:		// Protected Methods:	}	}