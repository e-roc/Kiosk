package src.menus {	import flash.display.MovieClip;		public class InfoBubble extends MovieClip{				// Constants:		// Public Properties:		public var bar:Bar;		// Private Properties:			// Initialization:		public function InfoBubble(b) {			bar = b;			displayInfo();		}				public function displayInfo()		{							trace("Clicked");			deselectAll();			removeChild(infoBubble);						infoBubble = new MovieClip();						b.highlightSelected();						var info:TextField = new TextField();			var format:TextFormat = new TextFormat("Bold", 16, 0xFFFFFF);						info.defaultTextFormat = format;			var day = b.horI + 1);			info.htmlText = '<p align="center">You consumed ' + Math.floor(b.barHeight/(h/maxY)) + ' kWh on the ' + day;			if (day%10 == 1)			{				info.htmlText = info.htmlText + 'st</p>';			}			else if (day%10 == 2)			{				info.htmlText = info.htmlText + 'nd</p>';			}			else if (day%10 ==3)			{				info.htmlText = info.htmlText + 'rd</p>';			}			else			{				info.htmlText = info.htmlText + 'th</p>';						}							info.width = 120;			info.wordWrap = true;			info.embedFonts = true;						info.autoSize = TextFieldAutoSize.CENTER;			var matrix:Matrix = new Matrix();			var colorsArray = new Array(0xBED63A, 0x68A400);			var alphasArray = new Array(0.9, 0.9);			var ratiosArray = new Array(0,255);			matrix.createGradientBox(120,120);			infoBubble.graphics.lineStyle(1,0xFFFFFF,0.7);			infoBubble.graphics.beginGradientFill("linear",colorsArray, alphasArray, ratiosArray, matrix, SpreadMethod.REFLECT, InterpolationMethod.LINEAR_RGB);			infoBubble.graphics.drawCircle(0,0, info.width/2+5);			trace("InfoLength: "+ info.width);			infoBubble.graphics.endFill()						addChild(infoBubble);			infoBubble.addChild(info);			info.x = -(info.width/2);			info.y = -(info.height/2);			trace ("Info height:" + info.height);			infoBubble.x =b.x + grid.x + 95;			infoBubble.y = h - b.barHeight + grid.y - 20;		}		// Public Methods:		// Protected Methods:	}	}