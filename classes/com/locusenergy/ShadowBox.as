package com.locusenergy {		import flash.display.*;	import flash.geom.Matrix;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormatAlign;		public class ShadowBox extends Sprite{				// Constants:		// Public Properties:		// Private Properties:			// Initialization:		public function ShadowBox(width, height, text:String = "") {				var box:Sprite = new Sprite();			var lines:Sprite = new Sprite();						var matrix:Matrix = new Matrix();			var colorsArray = new Array(0x00102b, 0x628099, 0x628099);			var alphasArray = new Array(0.5, 0.1, 0);			var ratiosArray = new Array(0, 190, 250);						matrix.createGradientBox(width, height, Math.PI/2, 0, 0);			box.graphics.beginGradientFill("linear",colorsArray, alphasArray, ratiosArray, matrix, SpreadMethod.PAD, InterpolationMethod.LINEAR_RGB, .75);			box.graphics.drawRect(0, 0, width, height);			box.graphics.endFill();						colorsArray = new Array(0xFFFFFF, 0xFFFFFF);			alphasArray = new Array(0.4, 0.0);			ratiosArray = new Array(0, 180);			matrix.createGradientBox(width, height, Math.PI/2);						lines.graphics.lineStyle(1, 0xFFFFFF, 1, true, LineScaleMode.NORMAL, CapsStyle.SQUARE);			lines.graphics.lineGradientStyle("linear", colorsArray, alphasArray, ratiosArray, matrix, SpreadMethod.PAD, InterpolationMethod.LINEAR_RGB, 1);			lines.graphics.moveTo(0,height);			lines.graphics.lineTo(0,0);			lines.graphics.moveTo(width, 0);			lines.graphics.lineTo(width, height);						lines.graphics.lineStyle(1, 0xFFFFFF, 0.4, true, LineScaleMode.NORMAL, CapsStyle.SQUARE);			lines.graphics.moveTo(1,0); 			lines.graphics.lineTo(width, 0);						var textBox = new TextField();			var fmt:TextFormat = new TextFormat("Gotham Narrow Medium", 16,0xFFFFFF);			textBox.defaultTextFormat = fmt;			textBox.embedFonts = true;			textBox.htmlText = text;			textBox.x = 15;			textBox.y = 12;			textBox.wordWrap = true;			textBox.multiline = true;			textBox.width = width - 30;			textBox.autoSize = TextFieldAutoSize.LEFT;															addChild(box);			addChild(lines);			addChild(textBox);		// Public Methods:		// Protected Methods:		}	}	}