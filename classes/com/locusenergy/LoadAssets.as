package com.locusenergy {	import com.locusenergy.AssetLoader;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.EventDispatcher;	public class LoadAssetArray extends Sprite {				// Constants:		// Public Properties:		public  var PVImage:Sprite;		public  var ProjectInformationImages:Array;		public  var EnvBenefitsImages:Array;		// Private Properties:		private  var assetLoader:AssetLoader;		private  var imageArray:Array;		private var imageURLArray;		private  var fillArray:Array;		// Initialization:		public function LoadAssetArray() { }			public function loadImageArray(imageURLArray, fillArray)		{			this.fillArray = fillArray;			this.imageURLArray = imageURLArray;			loadImage();		}		private function loadImage()		{			if (imageURLArray.length > 0)			{				assetLoader = new AssetLoader(imageURLArray[0], addImage);				assetLoader.addEventListener("ImageNotFound", nextImage, false, 0, true);				imageURLArray.splice(0,1);			}		}		private function addImage(asset)		{			fillArray.push(asset);			nextImage(null)		}		private function nextImage(e)		{			if (imageURLArray.length > 0)				loadImage();			else				dispatchEvent(new Event("ArrayLoaded"));					}	}	}