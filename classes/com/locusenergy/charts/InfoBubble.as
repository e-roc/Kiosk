package com.locusenergy.charts{	import flash.display.*;	import flash.text.*;	import flash.text.AntiAliasType;	import flash.geom.Matrix;	import caurina.transitions.Tweener;		public class InfoBubble extends MovieClip{				// Constants:		// Public Properties:		//public var bar:Bar;		public var maxY;		public var h;		public var xAxis;		public var yAxis;		public var infoText:String;		public var infoBubble:MovieClip;		public var colorsArray:Array;				// Private Properties:			// Initialization:		public function InfoBubble(height, yMax, info:String, color) {			//bar = b;			maxY = yMax;			h = height;			infoText = info;			setColor(color);			displayInfo();		}		public function animateOut(cleanUp:Function, param)		{			Tweener.addTween(infoBubble, {alpha:0, y: -50, time:.3, transition: "easeOutQuint", onComplete: cleanUp, onCompleteParams: [param]});		}		public function setColor(i)		{			if (i == 0)				colorsArray = new Array(0x68A400, 0xBED63A);			else if (i == 1)				colorsArray = new Array(0x1bb5ff, 0x106dc0);			else				colorsArray = new Array(i,i);		}			public function displayInfo()		{			infoBubble = new MovieClip();			var info:TextField = new TextField();			var format:TextFormat = new TextFormat("Gotham Narrow Bold", 16, 0xFFFFFF);						info.defaultTextFormat = format;						//trace (info);						info.selectable = false;			info.htmlText = '<p align="center">'+ infoText + '</p>';										info.width = 120;			info.wordWrap = true;			info.embedFonts = true;			info.antiAliasType = AntiAliasType.ADVANCED;			info.autoSize = TextFieldAutoSize.CENTER;						var matrix:Matrix = new Matrix();			var alphasArray = new Array(0.95, 0.7);			var ratiosArray = new Array(0,255);			matrix.createGradientBox(info.width,info.width);			infoBubble.graphics.lineStyle(1,0xFFFFFF,0.7);			infoBubble.graphics.beginGradientFill("linear",colorsArray, alphasArray, ratiosArray, matrix, SpreadMethod.REFLECT, InterpolationMethod.LINEAR_RGB);			infoBubble.graphics.drawCircle(0,0, info.width/2+5);			infoBubble.graphics.endFill()						addChild(infoBubble);			infoBubble.addChild(info);			info.x = -(info.width/2);			info.y = -(info.height/2);						//Animation			infoBubble.alpha = 0;			infoBubble.y = -80;					Tweener.addTween(infoBubble, {alpha:.9, y: 0, time:1, delay:0.3, transition: "easeOutBack"});		}		// Public Methods:		// Protected Methods:	}	}